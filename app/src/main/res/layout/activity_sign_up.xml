<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <EditText
        android:id="@+id/etSUemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="Email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/etSUname"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:layout_below="@+id/etSUemail"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/etSUpassword"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etSUname"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/etSUConfirmpass"
        android:layout_centerHorizontal="true"
        android:hint="Confirm Password"
        android:layout_below="@+id/etSUpassword"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"

        />

    <Button
        android:id="@+id/btnSU"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etSUConfirmpass"
        android:text="Sign Up"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />

</RelativeLayout>